@page "/Usuarios"

@inject IUsuarioService usuarioService
@inject IToastService toastService;
@inject SweetAlertService swat;
@inject AuthenticationStateProvider authenticationStateProvider;

@attribute [Authorize(Roles = "Administrador")]

<PageTitle>Usuarios</PageTitle>

<style>
    .wrap {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<AuthorizeView>
    <Authorized>
        <div class="row justify-content-center  mt-3 position-sticky">
            <div class="col-sm-6 col-md-4 col-xl-3 mb-4">
                <div class="d-grid gap-1 col-12 mx-auto">
                    <a class="btn btn-primary" href="/usuario">Nuevo usuario</a>
                </div>
            </div>
            <div class="col-sm-6 col-md-8 col-xl-9 mb-4">
                <div class="input-group mb-3">
                    <InputSelect class="form-select" @bind-value="rol">
                        <option value=0 selected>Todos</option>
                        <option value=1>Administrador</option>
                        <option value=2>Funcionario</option>
                        <option value=3>Solicitante</option>
                    </InputSelect>
                    <input type="text" class="form-control" placeholder="Buscar usuario..." @bind-value="buscar">
                    <button class="btn btn-outline-secondary" type="button" @onclick="(async () => await ObtenerUsuarios(rol, buscar))">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <div class="row gx-4 row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 mt-2">
        
            @if (Lista != null)
            {
        
                int IdLogged = Convert.ToInt32(@context.User.Claims.FirstOrDefault(u => u.Type == ClaimTypes.NameIdentifier)!.Value);

            foreach (UsuarioDTO item in Lista)
            {
                bool disable = IdLogged == item.Cedula;

                <div class="col mb-5">
                    <div class="card h-100">
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <i class="oi oi-person" style="font-size:50px"></i>
                                </div>
                                <div class="wrap text-start">
                                    <p class="m-1"><b>Usuario: </b>@item.NombreUsuario</p>
                                    <p class="m-1"><b>Rol: </b>@item.Rol.Nombre</p>
                                    <p class="m-1"><b>Correo: </b>@item.Correo</p>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="row justify-content-between">
                                    <a class="col-5 btn btn-sm btn-outline-primary mt-auto" href="/usuario/@item.Cedula"><i class="oi oi-pencil fs-5"></i>Editar</a>
                                    <button class="col-5 btn btn-sm btn-outline-danger mt-auto" type="button" disabled="@disable" @onclick="@(async () => await Eliminar(item))">
                                        <i class="oi oi-trash fs-5"></i> Eliminar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
            }
            else
            {
                <div class="col-12 d-flex justify-content-center align-items-center" style="min-height:200px;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
        
        </div>

    </Authorized>
</AuthorizeView>
@code {
    [Inject]
    private LoadingService loadingService { get; set; } = default!;

    private List<UsuarioDTO>? Lista = null;
    private string buscar = "";
    private int rol = 0;

    private async Task ObtenerUsuarios(int rol = 0, string valor = "")
    {
        var response = await usuarioService.Lista(rol, valor);
        if (response.EsCorrecto) Lista = (List<UsuarioDTO>) response.Resultado!;
        else Lista = new List<UsuarioDTO>();
    }

    protected override async Task OnInitializedAsync()
    {
        await ObtenerUsuarios(rol, buscar);
    }

    private async Task HandleInput(ChangeEventArgs e)
    {
        buscar = e.Value?.ToString()!;
        await ObtenerUsuarios(rol,buscar);
    }

    private async Task Eliminar(UsuarioDTO model)
    {
        if (loadingService.IsLoading) return;

        SweetAlertResult result = await swat.FireAsync(new SweetAlertOptions
        {
            Title = "Eliminar este usuario",
            Text = $"Seleccionado: {model.NombreUsuario}",
            Icon = SweetAlertIcon.Warning,
            ShowCancelButton = true,
            ConfirmButtonText = "Si, eliminar",
            CancelButtonText = "No, Volver",
        });

        if (result.IsConfirmed)
        {
            loadingService.Show();
            var response = await usuarioService.Eliminar(model.Cedula ?? 0);
            loadingService.Hide();
            if (response.EsCorrecto)
            {
                await ObtenerUsuarios(rol, buscar);
                toastService.ShowSuccess("Usuario eliminado");
            }
            else toastService.ShowError($"Error: {response.Mensaje!}");
        }
    }
}
