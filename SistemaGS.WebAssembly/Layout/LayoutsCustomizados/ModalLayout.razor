<div class="modal fade @(Mostrar ? "show d-block" : "")" tabindex="-1" style="background-color: rgba(0,0,0,0.3); display: @(Mostrar ? "block" : "none");">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Titulo</h5>
                <button type="button" class="btn-close" @onclick="Cerrar"></button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" @onclick="Confirmar">@TextoConfirmar</button>
                @if(MostrarCancelar)
                {
                    <button class="btn btn-info" @onclick="Cerrar">@TextoCancelar</button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public bool Mostrar { get; set; }
    [Parameter] public string Titulo { get; set; } = "Modal";
    [Parameter] public string TextoConfirmar { get; set; } = "Aceptar";
    [Parameter] public string TextoCancelar { get; set; } = "Cancelar";
    [Parameter] public bool MostrarCancelar { get; set; } = true;
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public EventCallback OnConfirmar { get; set; }
    [Parameter] public EventCallback OnCerrar { get; set; }

    private async Task Confirmar()
    {
        await OnConfirmar.InvokeAsync();
    }

    private async Task Cerrar()
    {
        await OnCerrar.InvokeAsync();
    }
}